<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.eerojaaskelainen.ostosbudjetti.shoppinglist.ShopsFragment"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/section_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/shops_fragment_dropdown_title"
            android:id="@+id/shopsfragment_store_txt" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopsfragment_store_list"
            android:background="@android:drawable/btn_dropdown"
            android:text="@string/shops_fragment_dropdown_initial_label"
            android:gravity="center_vertical|left"
            android:layout_weight="3" />

</LinearLayout>
